<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs'); %>
</head>

<body>
    <%- include('../includes/header.ejs'); %>

    <main class="main">

        <div class="main__wrapper">
            <form class="main__form-signin" method="POST" action="/reset-password">
                <% if(error) { %>
                <div class=" error">
                    <h1 class="error__message"><%= error %> </h1>
                </div>
                <% } %>
                <h2 class="main__form-signin-heading main__heading">Zresetuj hasło</h2>

                <input type="text"
                    class="main__form-control main__input mb-4 <%= input.errors.find(el => el.param === 'email')?'wrong-input':'' %>"
                    value="<%= input.email %>" name="email" placeholder="Wpisz tutaj email hasło" required="" />

                <button class="btn btn-lg btn-primary btn-block main__button" type="submit">Zatwierdź</button>

                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </form>
        </div>


    </main>

    <%- include('../includes/scripts.ejs') %>

</body>

</html>